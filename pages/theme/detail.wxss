/* pages/theme/detail.wxss */
.comment{
    width: 100%;
    padding-top: 10px;
}
.userInfo{
    border-bottom:1px solid #E6E6FA;
}
.userInfo .userinfo-avatar{
    display: inline-block;
    height: 36px;
    width: 36px;
    margin-left:10px; 
    border-radius: 50%;
}
.userinfo-top{
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    align-items: center;
}
.userInfo-tab{
    margin-left: 45px;
    height:20px;
    clear: both;
    line-height: 20px;
}
.userInfo .userinfo-nickname{
    font-size: 12px;
    color: black;
    display: inline-block;
    height: 18px;
    width: 250px;
    margin-left: 10px;
    flex: 1;
}
.userInfo .text4{
    font-size: 12px;
    color: #888888;
    display: inline-block;
    margin-right: 10px;
}
.con{
    display: inline-block;
    width: 100%;
    height: 30px;
    color: #444444;
    font-size: 12px;
    margin-left: 10px;
}
